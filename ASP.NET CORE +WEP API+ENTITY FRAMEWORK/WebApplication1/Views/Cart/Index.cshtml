@model CartModel
<div class="container my-3">
<h1 class="h3">Shopping Cart</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <table class="table hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                  
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.ImageUrl" width="80" alt="">
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity * item.Price)</td>
                        <td>
                                <form asp-action="Deletecart" asp-controller="Cart" method="post">
                                    <input type="hidden" name="Id" value="@item.ProductId">
                                    <div class="input-group mb-3">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fa fa-times fa-fw"></i>
                                            </button>
                                        </div>
                                    </div>


                                </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Cart Summary</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Cart Total</th>
                        <td>@Model.Total TL</td>
                    </tr>
                  
                </tbody>
            </table>
            <div class="text-center">
                <a href="/Home/Index" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i> Continue Shopping
                </a>
            
            </div>
        </div>
</div>